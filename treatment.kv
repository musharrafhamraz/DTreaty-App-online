
MDScreen:
    name: "treatment"
    MDFloatLayout:
        md_bg_color: 1,1,1,1
        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": .95}
            user_font_size: "30sp"  # Corrected property name
            theme_text_color: "Custom"
            text_color: [0, 0, 0, 1]
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "camera"
        Image:
            source: "images/treater.png"
            pos_hint: {'center_x': 0.5,'center_y': 0.8}
        MDBoxLayout:
            orientation: 'vertical'
            MDFloatLayout:
                MDLabel:
                    text: app.condition_value
                    font_name: "Poppins"
                    font_size: "18sp"
                    pos_hint: {"center_y": .12}
                    halign: "center"
                    color: rgba(34, 34, 34, 255) 
            ScrollView:
                MDLabel:
                    text: app.treatment
                    font_name: "Poppinsl"
                    font_size: "14sp"
                    size_hint_y: None
                    height: self.texture_size[1]
                    pos_hint: {"center_y": .6}
                    halign: "center"
                    color: rgba(34, 34, 34, 200)
